<div class="row">
    <div class="col-md-12">
      <!-- adding the button for the adding categories -->
      <h2>Categories<a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2> 
    
      <div class="table-boots">
        <table class="table">
          <thead>
            <tr>
              <th>Category ID</th>
              <th>Category Name</th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <td><a href="/posts?category={{id}}">{{id}}</a></td>
                <td><a href="/posts?category={{id}}">{{category}}</a></td>
                <!-- adding the remove button for the removing the categories -->
                 <td><a href="categories/delete/{{id}}" class="btn btn-danger">Remove Button</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{#unless categories}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
      {{/unless}}
          

    </div>
</div>
